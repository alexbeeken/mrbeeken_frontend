<section class='courses-feed'>
  {{#each courses as |course|}}
    {{#link-to "course" course.id}}
      <article class='course-preview box hover'>
        <div class='course-preview-title'>
          {{course.title}}
        </div>
        <hr>
        <div class='course-preview-summary'>
          {{course.summary}}
        </div>
      </article>
    {{/link-to}}
  {{/each}}
</section>
