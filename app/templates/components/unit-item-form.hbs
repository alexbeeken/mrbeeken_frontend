<div class='assessment-form'>
  <form {{action 'saveUnitItem' on='submit'}}>
    <div class='assessment-form-input'>
      {{input
        type='text'
        pattern='.{3,120}'
        required=true
        placeholder='Title'
        value=title}}
    </div>

    <div class='assessment-form-input'>
      {{#radio-button
        value='assessment'
        groupValue=type
        required=true
      }}
        assessment
      {{/radio-button}}
      {{#radio-button
        value='lesson'
        groupValue=type
        required=true
      }}
        lesson
      {{/radio-button}}
    </div>

    <div class='lesson-form-input'>
      {{textarea
        required=true
        placeholder='Content'
        value=content}}
    </div>

    <div class='assessment-form-input'>
      {{input
        type='text'
        required=true
        placeholder='Order'
        value=order}}
    </div>
    <div class='assessment-form-input'>
      <button type='submit'>Save</button>
    </div>
  </form>
</div>
