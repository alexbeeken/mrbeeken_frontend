<header class='nav-header'>
  <div class='main-logo'>
    {{#link-to 'index'}}
      {{inline-svg 'svg/main-logo'}}
    {{/link-to}}
  </div>
  <div class='user-login'>
    {{#if currentUser}}
      <div class='logout-button'>
        <a href='#' {{action 'invalidateSession' preventDefault=true}}>Logout</a>
      </div>
    {{else}}
      <div class='login-button'>
        {{#link-to 'login'}}login{{/link-to}}
      </div>
    {{/if}}
  </div>
</header>
