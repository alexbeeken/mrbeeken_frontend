<div class='unit-bar-item'>
  {{#if isCompleted}}
    <div class='completed'>
      {{#if isCurrent}}
        <div class='current'>
          {{fa-icon 'circle-o'}}
        </div>
      {{else}}
        {{fa-icon 'circle-o'}}
      {{/if}}
    </div>
  {{else}}
    {{#if isCurrent}}
      <div class='current'>
        {{fa-icon 'circle'}}
      </div>
    {{else}}
      {{fa-icon 'circle-o'}}
    {{/if}}
  {{/if}}
</div>
