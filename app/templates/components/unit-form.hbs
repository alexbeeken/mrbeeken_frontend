<div class='unit-form'>
  <form {{action 'saveUnitItem' on='submit'}}>
    <div class='unit-form-input'>
      {{input
        type='text'
        pattern='.{3,120}'
        required=true
        placeholder='Title'
        value=title}}
    </div>

    <div class='unit-form-input'>
      {{textarea
        required=true
        placeholder='Summary'
        value=summary}}
    </div>

    <div class='unit-form-input'>
      {{textarea
        required=true
        placeholder='Order'
        value=order}}
    </div>

    <div class='unit-form-input'>
      <button type='submit'>Save</button>
    </div>
  </form>
  {{#if unit.id}}
    <table>
      <div class='admin-table'>
        {{#each sortedItems as |unitItem|}}
          {{admin-item-row unitItem=unitItem}}
        {{/each}}
      </div>
    </table>
    {{#link-to 'unit-items.new' unit.id}}
      <h3>New Unit Item</h3>
    {{/link-to}}
  {{/if}}
</div>
