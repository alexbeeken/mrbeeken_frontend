<div class='unit-form'>
  <form {{action 'saveUnit' on='submit'}}>
    <div class='unit-form-input'>
      {{input
        type='text'
        pattern='.{3,120}'
        required=true
        placeholder='Title'
        value=title}}
    </div>

    <div class='unit-form-input'>
      {{textarea
        required=true
        placeholder='Summary'
        value=summary}}
    </div>

    <div class='unit-form-input'>
      {{textarea
        required=true
        placeholder='Order'
        value=order}}
    </div>

    <div class='unit-form-input'>
      <button type='submit'>Save</button>
    </div>
  </form>
  {{#if unit.id}}
    <ol>
      {{#each sortedItems as |item|}}
        <li>
          {{item-edit-link item=item}}
          <button {{action "deleteItem" item.id}}>
            {{fa-icon "times"}}
          </button>
        </li>
      {{/each}}
    </ol>
    {{#link-to 'assessments.new' unit.id}}
      <h3>New Assessment</h3>
    {{/link-to}}
    {{#link-to 'lessons.new' unit.id}}
      <h3>New Lesson</h3>
    {{/link-to}}
  {{/if}}
</div>
