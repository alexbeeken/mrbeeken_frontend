<div class='unit-form'>
  <form {{action 'saveUnit' on='submit'}}>
    <div class='unit-form-input'>
      {{input
        type='text'
        pattern='.{3,120}'
        required=true
        placeholder='Title'
        value=title}}
    </div>

    <div class='unit-form-input'>
      {{textarea
        required=true
        placeholder='Summary'
        value=summary}}
    </div>

    <div class='unit-form-input'>
      {{textarea
        required=true
        placeholder='Order'
        value=order}}
    </div>

    <div class='unit-form-input'>
      <button type='submit'>Save</button>
    </div>
  </form>
  {{#if unit.id}}
    {{#link-to 'assessments.new' unit.id}}
      <h3>New Assessment</h3>
    {{/link-to}}
    <ol>
      {{#each assessments as |assessment|}}
        <li>
          {{#link-to 'assessment.edit' assessment.id}}
            # {{assessment.order}}
            - {{assessment.title}}
          {{/link-to}}
          <button {{action "deleteAssessment" assessment.id}}>
            {{fa-icon "times"}}
          </button>
        </li>
      {{/each}}
    </ol>
  {{/if}}
  {{#if unit.id}}
    {{#link-to 'lessons.new' unit.id}}
      <h3>New Lesson</h3>
    {{/link-to}}
    <ol>
      {{#each lessons as |lesson|}}
        <li>
          {{#link-to 'lesson.edit' lesson.id}}
          # {{lesson.order}}
          - {{lesson.title}}
          {{/link-to}}
          <button {{action "deleteLesson" lesson.id}}>
            {{fa-icon "times"}}
          </button>
        </li>
      {{/each}}
    </ol>
  {{/if}}
</div>
